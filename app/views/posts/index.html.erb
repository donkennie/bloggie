<div class="container">
    <% @posts.each do |post| %>
    <div class="row">
        <div class="card mb-3">
            <img class="card-img-top" 
            src="<%= url_for post.thumbnail.variant(reset_to_limit: [386, 180]) %>" 
            alt="Blog Post Image Card" />
            <div class="card-body">
                <h5 class="card-title">
                    <%= link_to post.title, post %>
                </h5>
                <p class="card-text">
                    <%= post.body.to_plain_text.truncate_words(50) %>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        <%= post.updated_at.strftime("%A, %B %e, %Y") %> by
                        <%= post.user.first_name %> | <%= pluralize(post.views, "View") %> | 0 comments
                    </small>
                </p>
            </div>
        </div>
    </div>
    <% end %>
</div>